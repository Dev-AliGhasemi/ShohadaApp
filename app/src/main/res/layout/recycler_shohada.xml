<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="500dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="6dp"
        android:elevation="@dimen/cardview_default_elevation">
        <LinearLayout
            android:background="#e5b38d3d"
            android:layout_width="match_parent"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            android:paddingLeft="7dp"
            android:paddingStart="7dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/motie"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#b78836"
                android:layout_marginTop="4dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="8dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="#564f4f"
                    android:layout_gravity="start"
                    android:id="@+id/act_3_textName"
                    android:textSize="20sp"
                    android:gravity="center|start"
                    android:paddingStart="8dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:id="@+id/act_3_textFamilyName"
                    android:text="نام و نام خانوادگی:"
                    android:textColor="#000"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#b78836"
                android:layout_marginTop="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:weightSum="4"
                    android:padding="8dp"
                    android:gravity="center|start">
                    <TextView
                        android:paddingRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_weight="3"

                        android:id="@+id/act_3_textDateBorn"
                        android:gravity="start|center"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/act_3_textBorn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:background="@drawable/text_view_bg"
                        android:gravity="center"
                        android:text="تولد"
                        android:textColor="#fff"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="8dp"
                    android:layout_gravity="start"
                    android:gravity="center|start"
                    android:layout_weight="1">
                    <TextView
                        android:paddingRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_weight="3"
                        android:id="@+id/act_3_textDateDead"
                        android:gravity="start|center"
                        android:textColor="#000"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:lines="1"
                        android:maxLines="1"
                        android:layout_gravity="start"
                        android:id="@+id/act_3_textDead"
                        android:text="شهادت"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:background="@drawable/text_view_bg2"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:tint="#432a15"
                    android:id="@+id/act_3_imageFavorite"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/bookmark"
                    android:scaleType="fitStart"/>
                <Button
                    android:id="@+id/act_3_btnRead"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_read"
                    android:text="زندگی نامه" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
    </RelativeLayout>