<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ghasemi.golzarshohada.MainActivity"
    android:id="@+id/act_1_parent"
    android:background="@drawable/backgroud"
    android:weightSum="10"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/act_1_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="4"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/act_1_khon"

            android:src="@drawable/khon"
            android:layout_gravity="start"
            android:layout_alignParentStart="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/act_1_textQom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="قم"
                android:textSize="@dimen/font_size_splash"
                android:paddingBottom="40dp"/>

            <TextView
                android:id="@+id/act_1_textShohada"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="شهدای "
                android:textColor="#cf1515"
                android:textSize="@dimen/font_size_splash"
                android:paddingBottom="40dp"/>

            <TextView
                android:id="@+id/act_1_textGolzar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="گلزار "
                android:textSize="@dimen/font_size_splash"
                android:paddingBottom="40dp"/>
        </LinearLayout>
    </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="با ذکر صلوات وارد شوید"
            android:id="@+id/act_1_textSalavat"
            android:gravity="center|bottom"
            android:textSize="15dp"
            android:textColor="#b2ff00"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ویرایش 1.0"
            android:id="@+id/act_1_textVirayesh"
            android:gravity="center"
            android:textSize="15dp"/>
</LinearLayout>
